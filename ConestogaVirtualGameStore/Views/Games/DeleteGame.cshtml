@model Game

<h2>Delete Game</h2>

<h3> Are you sure you want to delete this game?</h3>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Genere</p>
    <p>@Model.ReleaseDate.ToShortDateString()</p>
    <p>@Model.Platform</p>
    <p>@Model.Price.ToString("C")</p>
    <img src="@Model.CoverImageURL" alt="@Model.Title" style="max-height: 200px;" />
</div>

<form asp-action="DeleteGame">
    <input type="hidden" asp-for="GameId" />
    <input type="submit" value="ConfirmDeleteGame" class="btn btn-danger" />
    <a href="@Url.Action("Games")" class="btn btn-secondary">Cancel</a>
</form>


