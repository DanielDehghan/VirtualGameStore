@model IEnumerable<Game>

<style>
    /* Custom styles for the dark background */
    .table {
        background-color: #2c2c2c; /* Dark gray background */
        color: #f1f1f1; /* Light text for contrast */
    }

        .table thead {
            background-color: #1f1f1f; /* Even darker header */
        }

    .table-hover tbody tr:hover {
        background-color: #3a3a3a; /* Highlight on hover */
    }

    .table th, .table td {
        border: none; /* Remove the table borders */
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary button */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #004085;
        }

    .btn-danger {
        background-color: #dc3545; /* Bootstrap danger button */
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bd2130; /* Darker red on hover */
            border-color: #a71d2a;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr id="GameDataRow">
                    <td>@game.Title</td>
                    <td>@game.Genre</td>
                    <td>@game.ReleaseDate.ToShortDateString()</td>
                    <td>@game.Price.ToString("C")</td>
                    <td>
                        <a asp-action="EditGame" asp-route-id="@game.GameId" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteGame" asp-route-id="@game.GameId" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="AddGame" class="btn btn-success">
    <i class="fas fa-plus"></i> Add New Game
</a>