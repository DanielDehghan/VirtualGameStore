@model ConestogaVirtualGameStore.ViewModels.WishlistFriendFamilyViewModel

@{

    ViewData["Title"] = "Friend detail" ;
}

<style>
    #text, #wishlists {
        color: white;
    }
    #text
    {
        text-align: center;
    }
</style>

<div class="card" style="background-color: #2c2c2c;">
    <div class="col-md-12 mb-3" id="text">
        <div class="card-body" style="background-color: #2c2c2c; border: 1px solid white;">
            <h1>@Model.Member.FirstName @Model.Member.LastName</h1>
            <p><strong>Email:</strong> @Model.Member.Email</p>
            <p><strong>Preferred Language:</strong> @Model.Member.PreferredLanguage</p>
            <p><strong>Preferred Platform:</strong> @Model.Member.PreferredPlatform</p>
            <p><strong>Preferred Category:</strong> @Model.Member.PreferredCategory</p>
        </div>

        <div class="card-body" style="background-color: #2c2c2c; border: 1px solid white;">
            <div id="wishlists">
                <h3>Wishlists</h3>
                <div class="container mt-5" id="GameCard">
                    <div class="row">
                        @if (Model != null)
                            @foreach (var wishlist in Model.Wishlists)

                            {
                                <div class="col-md-3 mb-3" style="color:#212545">
                                    <a asp-action="WishlistDetailFriendFamily" asp-route-id="@wishlist.Wishlist_ID" class="card-link" style="color:floralwhite; text-decoration: none;">
                                        <div class="card h-100 game-card">
                                            <div class="card-body" style="background-color: #780000;">
                                                <h5 class="card-title">@wishlist.Wishlist_Name</h5>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a href="@Url.Action("Friends", "Relationships")" class="btn btn-primary mt-3">Back to Friends</a>
        </div>
    </div>
</div>
