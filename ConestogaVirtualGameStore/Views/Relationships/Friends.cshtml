@model IEnumerable<MemberRelationship>

@{
    ViewData["Title"] = "Friends";
}

<div class="container mt-5">
    <div class="row">
        <div>
            <a asp-action="AddFriend" class="btn btn-success mt-3 mb-5">
                <i class="bi bi-person-plus-fill"></i> Add Friend
            </a>
        </div>
        @if (Model != null)
            @foreach (var memberRelationship in Model)
            {
                <div class="col-md-3 mb-3" style="color:#212545">
                    <a class="card-link" style="color:floralwhite; text-decoration: none;">
                        <div class="card h-100 game-card">
                            <div class="card-body" style="background-color: #780000;">
                                <h5 class="card-title">@memberRelationship.MemberAdded.FirstName @memberRelationship.MemberAdded.LastName</h5>
                                <a asp-action="DeleteFriend" asp-route-id="@memberRelationship.MemberRelationshipId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-person-x-fill"></i> Remove from Friends
                                </a>
                            </div>
                        </div>
                    </a>
                </div>
            }
    </div>

    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</div>
