
@model ConestogaVirtualGameStore.Models.Member

<h2 class="text-white">Personal Info</h2>

<div class="container p-4" style="background-color: #780000; border-radius: 8px;">
    <form asp-action="Update" method="post">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label text-white"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label text-white"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label text-white"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Phone_Number" class="form-label text-white">Phone Number</label>
            <input asp-for="Phone_Number" class="form-control" />
            <span asp-validation-for="Phone_Number" class="text-dark"></span>
        </div>

        <h3 class="text-white mt-4">Address</h3>
        @if (string.IsNullOrEmpty(Model.StreetAddress))
        {
            <div class="mb-3">
                <label asp-for="StreetAddress" class="form-label text-white"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-dark"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apt_suit" class="form-label text-white"></label>
                <input asp-for="Apt_suit" class="form-control" />
                <span asp-validation-for="Apt_suit" class="text-dark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label text-white"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Province" class="form-label text-white"></label>
                <select asp-for="Province" class="form-select">
                    <option value="">Select a province</option>
                    <option value="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="MB">Manitoba</option>
                    <option value="NB">New Brunswick</option>
                    <option value="NL">Newfoundland and Labrador</option>
                    <option value="NS">Nova Scotia</option>
                    <option value="ON">Ontario</option>
                    <option value="PE">Prince Edward Island</option>
                    <option value="QC">Quebec</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="YT">Yukon</option>
                </select>
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label text-white"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-dark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Postal_Code" class="form-label text-white"></label>
                <input asp-for="Postal_Code" class="form-control" />
                <span asp-validation-for="Postal_Code" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary">Add Address</button>
        }
        else
        {
            <div class="mb-3">
                <label asp-for="StreetAddress" class="form-label text-white"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-dark"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apt_suit" class="form-label text-white"></label>
                <input asp-for="Apt_suit" class="form-control" />
                <span asp-validation-for="Apt_suit" class="text-dark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label text-white"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Province" class="form-label text-white"></label>
                <select asp-for="Province" class="form-select">
                    <option value="">Select a province</option>
                    <option value="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="MB">Manitoba</option>
                    <option value="NB">New Brunswick</option>
                    <option value="NL">Newfoundland and Labrador</option>
                    <option value="NS">Nova Scotia</option>
                    <option value="ON">Ontario</option>
                    <option value="PE">Prince Edward Island</option>
                    <option value="QC">Quebec</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="YT">Yukon</option>
                </select>
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label text-white"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-dark"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Postal_Code" class="form-label text-white"></label>
                <input asp-for="Postal_Code" class="form-control" />
                <span asp-validation-for="Postal_Code" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary me-2">Update Address</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAddressModal">
                Delete Address
            </button>
        }
    </form>
</div>

<div class="modal fade" id="deleteAddressModal" tabindex="-1" aria-labelledby="deleteAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #000; color: #fff; border-radius: 8px;">
            <div class="modal-header" style="border-bottom: 1px solid #444;">
                <h5 class="modal-title" id="deleteAddressModalLabel">Delete Address</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this address?
            </div>
            <div class="modal-footer" style="border-top: 1px solid #444;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteAddress" method="post">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>