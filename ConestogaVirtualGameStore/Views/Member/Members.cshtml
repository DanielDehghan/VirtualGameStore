@model IEnumerable<Member>


<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Province</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr id="GameDataRow">
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Email</td>
                    <td>@member.Province</td>
                    <td>
                        <a asp-action="EditGame" asp-route-id="@member.Member_ID" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteGame" asp-route-id="@member.Member_ID" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="AddGame" class="btn btn-success">
    <i class="fas fa-plus"></i> Add New Game