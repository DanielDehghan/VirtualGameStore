@model ConestogaVirtualGameStore.ViewModels.CreateEventViewModel;

<form asp-action="AddEvent" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter event title" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Date" class="control-label"></label>
            <div class="input-group date" id="releaseDatePicker">
                <input type="datetime" asp-for="Date" class="form-control" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Address" class="control-label"></label>
            <div class="input-group">
                <input asp-for="Address" class="form-control" placeholder="Enter event address" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Country" class="control-label"></label>
            <div class="input-group">
                <input asp-for="Country" class="form-control" placeholder="Enter event country" />
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="City" class="control-label"></label>
            <div class="input-group">
                <input asp-for="City" class="form-control" placeholder="Enter event city" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Province" class="control-label"></label>
            <div class="input-group">
                <input asp-for="Province" class="form-control" placeholder="Enter event province" />
            </div>
            <span asp-validation-for="Province" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PostalCode" class="control-label"></label>
            <div class="input-group">
                <input asp-for="PostalCode" class="form-control" placeholder="Enter event postal code" />
            </div>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter event description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
        <input type="submit" value="Add Event" class="btn btn-primary btn-block" />
</form>