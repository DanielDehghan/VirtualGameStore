@model IEnumerable<ConestogaVirtualGameStore.Models.Report>

<h2 style="color:white;">Reports</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Report Name</th>
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Name</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton-@report.Id" data-bs-toggle="dropdown" aria-expanded="false">
                            Download
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@report.Id">
                            <li><a class="dropdown-item" href="@Url.Action("DownloadReport", "Reports", new { id = report.Id, format = "Excel" })">Excel</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DownloadReport", "Reports", new { id = report.Id, format = "PDF" })">PDF</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    .table {
        background-color: #2c2c2c; 
        color: #f1f1f1; 
    }

        .table thead {
            background-color: #1f1f1f;
        }

    .table-hover tbody tr:hover {
        background-color: #3a3a3a; 
    }

    .table th, .table td {
        border: none;
        color: white;
    }
</style>