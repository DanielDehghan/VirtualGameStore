@model IEnumerable<Review>

<style>
    /* Custom styles for the dark background */
    .table {
        background-color: #2c2c2c; /* Dark gray background */
        color: #f1f1f1; /* Light text for contrast */
    }

        .table thead {
            background-color: #1f1f1f; /* Even darker header */
        }

    .table-hover tbody tr:hover {
        background-color: #3a3a3a; /* Highlight on hover */
        color: white;
    }

    .table th, .table td {
        border: none; /* Remove the table borders */
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary button */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #004085;
        }

    .btn-danger {
        background-color: #dc3545; /* Bootstrap danger button */
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bd2130; /* Darker red on hover */
            border-color: #a71d2a;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Review #</th>
                <th>Member Name</th>
                <th>Review Title</th>
                <th>Review Description</th>
                <th>Review Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var reviews in Model)
                {
                    <tr id="ReviewsDataRow">
                        <td>@reviews.Review_ID</td>
                        <td>@reviews.Member.FirstName @reviews.Member.LastName</td>
                        <td class="card-text">
                            @reviews.ReviewTitle
                        </td>
                        <td>@reviews.ReviewDescription</td>
                        <td>@reviews.ReviewRating</td>
                        <td>
                            <a asp-action="ApproveReview" asp-route-id="@reviews.Review_ID" class="btn btn-sm btn-success">
                                <i class="fas fa-plus"></i> Process
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

